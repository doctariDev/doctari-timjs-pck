{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
  ],
  "typedocOptions": {
    "entryPointStrategy": "expand",
    "entryPoints": ["./src"],
    "out": "docs"
  },
}
